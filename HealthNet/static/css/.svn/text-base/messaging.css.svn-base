.messagecontact {
    background-color: #eeecec;
    border-bottom: 2px solid #d5d4d4;
    border-right: 1px solid #d5d4d4;
    width: 100%;
    margin: 0 auto;
    position: relative;
}

.message-view {
    background-color: #eeecec;
    border-bottom: 2px solid #d5d4d4;
    border-right: 1px solid #d5d4d4;
    width: 100%;
    margin: 0 auto;
    position: relative;
}

.messagecontact:hover {
    background-color: #b82424;
    color: #ffffff;
    cursor: hand;
    cursor: pointer;

    transition-property: background-color;
    transition-duration: .2s;
}

#search-result-name h1 {
  color: #222222;
  margin-bottom: 0;
}

#search-result-name h3 {
  color: #575757;
  margin-bottom: 0;
  margin-top: 5px;
}

.messagecontact:hover #search-result-name h1, h3 {
    color: #ffffff;
}

.message-view:hover {
    /*background-color: #b82424;*/
}

.message-view #message-display-photo{
    display: inline-block;
    padding-bottom: 5px;
    padding-top: 5px;
    padding-left: 5px;
}

.message-view #message-display-name{
    display: inline-block;
    padding-top: 10px;
}

.message-view #message-display-preview {
    display: inline-block;
    padding-top: 10px;
}

.message-view #message-display-subject {
    display: inline-block;
    padding-top: 10px;
}

.message-view #message-display-date {
    display: inline-block;
    /*position: absolute;
    right: 5px;*/
    padding-top: 10px;
}

.messagecontact #search-result-name h1 {
    font-size: 16pt;
}

.messagecontact #search-result-name h3 {
    font-size: 14pt;
}

.sender-name-read {
    font-size: 16px;
}

.sender-type-read {
    font-size: 16px;
    font-style: italic;
    margin-right: 10px;
    color: #777777;
}

.sender-name-unread {
    font-size: 16px;
    font-weight: 900;
}

.sender-type-unread {
    font-size: 16px;
    font-style: italic;
    font-weight: 900;
    margin-right: 10px;
    color: #777777;
}

.message-body {
    font-size: 16px;
    color: #777777;
}

.message-subject-read {
    font-size: 16px;
}

.message-subject-unread {
    font-size: 16px;
    font-weight: 900;
}

#new-message-button {
  display: inline-block;
  position: absolute;
  right: 10px;
}

#message-inbox-h1 {
  display: inline-block;
}

@media screen and (max-width: 387px) {
  #message-inbox-h1 {
    display: none;
  }

  #new-message-button {
    position: static;
    width: 100%;
  }

  #new-message-button .profile-quick-link-button {
    width: 97%;
  }
}

#messages-inbox {
    list-style: none;
    margin: 5px;
    padding: 0;
}

#message-view-link {
    width: 95%;
}
